<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/stylessheets/images.css" />

<div class="row">
  <h1 class="text-center">Add a new campground!</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/campgrounds"
          method="post"
          novalidate
          class="validateForm"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Campground title</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              name="campground[location]"
              id="location"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="price">Price / night</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">AU $</span>
              <input
                type="number"
                class="form-control"
                name="campground[price]"
                placeholder="0.00"
                id="price"
                aria-label="price"
                aria-describedby="price-label"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              placeholder="Write a short description of the campground"
              type="text"
              name="campground[description]"
              id="description"
              required
              rows="5"
            ></textarea>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- IMAGE UPLOAD SECTION -->

          <div class="mb-3 custom-file">
            <label for="image" class="form-label">Add image(s)</label>
            <input
              class="form-control bs-custom-file-input"
              type="file"
              id="imageUpload"
              name="image"
              multiple
            />
            <label for="image" class="custom-file-label text-muted"></label>
            <div class="mt-3" id="formFile"></div>
          </div>
          <div class="mb-3">
            <button class="btn btn-primary">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Back</a>
      </div>
    </div>
  </div>
</div>
